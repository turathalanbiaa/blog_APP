<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"

    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="12dp"
    app:cardCornerRadius="4dp"
    app:cardElevation="8dp"

    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="6dp"
        android:textDirection="rtl">

        <TextView
            android:id="@+id/psi_postId"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layoutDirection="ltr"
                android:layout_marginTop="5dp"
                android:layout_marginRight="10dp"
                >
                <ImageButton
                    android:id="@+id/bookmark"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_bookmark_border_black_24dp"
                    android:background="@drawable/bg_button2"
                    android:layout_gravity="center"
                    />
                <View

                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:layout_margin="5dp"
                    android:background="?android:attr/listDivider" />


                <TextView
                    android:id="@+id/time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Time"
                    android:paddingRight="10dp"
                    android:paddingLeft="5dp"
                    android:drawablePadding="5dp"
                    android:drawableLeft="@drawable/ic_date_range_black_24dp"
                    />
                <View
                    android:id="@+id/divider4"
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:layout_margin="5dp"
                    android:background="?android:attr/listDivider" />
                <TextView
                    android:id="@+id/viewsCount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:text="views"
                    android:drawablePadding="5dp"
                    android:drawableLeft="@drawable/ic_remove_red_eye_black_24dp"

                    android:textDirection="ltr"/>
                <View
                    android:id="@+id/divider5"
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:layout_margin="5dp"
                    android:background="?android:attr/listDivider" />

                <TextView
                    android:id="@+id/commentsCount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:paddingLeft="10dp"
                    android:drawablePadding="5dp"
                    android:drawableLeft="@drawable/ic_comment_black_24dp"
                    android:textDirection="ltr"/>

                <ImageButton
                    android:id="@+id/notApproved"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bg_button"
                    android:src="@drawable/ic_new_releases_black_24dp"
                    android:layout_gravity="right"
                    android:tooltipText="@string/notApproved"
                    android:visibility="gone"

                    />

            </LinearLayout>
            <View
                android:id="@+id/divider6"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_margin="5dp"
                android:background="?android:attr/listDivider" />

            <TextView

                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:paddingBottom="5dp"
                android:id="@+id/postTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="خاطرة"
                android:fontFamily="@font/myfont"
                android:textStyle="bold"
                android:textSize="20sp"
                android:layout_gravity="center"
                android:textColor="@color/colorPrimaryDark"

                />


        </LinearLayout>


        <LinearLayout
            android:id="@+id/contentLL"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView

                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:id="@+id/postDetails"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:maxLines="3"
                android:text="فصبرٌ جميل لن تستطيع الأمّة أنْ تحقّق نهضة شاملة في حياتها ما لم تغيّر مفهومها عن الصبر، وتؤمن بأنّ الصبر هو الصبر على أداء الواجب وتحمّل المكاره في سبيل مقاومة الظلم والطغيان والترفّع عن الهموم الصغيرة من أج"
                android:fontFamily="@font/myfont"
                android:textSize="16sp"
                />

            <TextView
                android:id="@+id/seeMore"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="رؤية المزيد..."
                android:fontFamily="@font/myfont"
                android:padding="5dp"
                android:layout_gravity="center"
                android:textColor="@color/colorPrimaryDark"

                android:visibility="visible"
                />
        </LinearLayout>



        <ImageView
            android:id="@+id/post_pic"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:src="@drawable/aqlamdefault"
            android:background="@drawable/bg_pic"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:visibility="gone"
            />
        <View
            android:id="@+id/divider3"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:padding="10dp"/>



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:layoutDirection="rtl"
                >


                <Button
                    android:id="@+id/catBtn"
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:background="@drawable/bg_button_tag"
                    android:text="@string/menu_categories"
                    android:textSize="14sp"
                    android:paddingRight="5dp"
                    android:paddingLeft="5dp"
                    android:textStyle="italic"
                    android:layout_gravity="center"
                    android:layout_margin="5dp"

                    />

                <Space
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="5"
                    />

                <TextView
                    android:id="@+id/editPost"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="تعديل"
                    android:paddingLeft="10dp"
                    android:drawablePadding="5dp"
                    android:drawableLeft="@drawable/ic_mode_edit_black_24dp"
                    android:textDirection="ltr"
                    android:layout_gravity="center"
                    android:visibility="gone"
                    />
                <TextView
                    android:id="@+id/deletePost"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="حذف"
                    android:paddingLeft="10dp"
                    android:drawablePadding="5dp"
                    android:drawableLeft="@drawable/ic_delete_black_24dp"
                    android:textDirection="ltr"
                    android:layout_gravity="center"
                    android:visibility="gone"
                    />


            </LinearLayout>


    </LinearLayout>




</androidx.cardview.widget.CardView>