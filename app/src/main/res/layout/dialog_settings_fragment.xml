<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <Switch
        android:id="@+id/themeSwitch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="10dp"
        android:text="@string/nightMode"
        android:fontFamily="@font/myfont"
        android:padding="10dp"
        android:switchPadding="15dp"
        android:layoutDirection="ltr"

        />

    <View
        android:id="@+id/divider7"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginRight="50dp"
        android:layout_marginLeft="50dp"
        android:background="@color/colorAccent"
        />

    <RadioGroup
        android:id="@+id/fontSelect"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:padding="10dp"
        android:layoutDirection="rtl"

        >

        <RadioButton
            android:id="@+id/f1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="مدونة الكفيل"
            android:fontFamily="@font/myfont"
            />

        <RadioButton
            android:id="@+id/f2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="مدونة الكفيل"
            android:fontFamily="@font/myfont2"/>

        <RadioButton
            android:id="@+id/f3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="مدونة الكفيل"
            android:fontFamily="@font/myfont3"/>
    </RadioGroup>
    <View
        android:id="@+id/divider8"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginRight="50dp"
        android:layout_marginLeft="50dp"
        android:background="@color/colorAccent"
        />
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layoutDirection="ltr"
        android:padding="10dp"
        android:layout_gravity="center">
        <ImageButton
            android:id="@+id/increase"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_add"
            android:background="@drawable/bg_button"
            android:layout_marginRight="10dp"
            android:layout_gravity="center" />
        <TextView
            android:id="@+id/sizeSample"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="حجم الخط"
            android:gravity="center"
            android:layout_gravity="center"
            android:textSize="16sp"/>

        <ImageButton
            android:id="@+id/decrease"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_remove_circle_outline_black_24dp"
            android:background="@drawable/bg_button"
            android:layout_marginLeft="10dp"
            android:layout_gravity="center" />

    </LinearLayout>
    <Button
        android:id="@+id/defaultSettings"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="الإعدادات الافتراضية"
        android:background="@drawable/bg_button3"
        android:layout_margin="10dp"
        android:minHeight="0dp"
        android:padding="3dp"

        />

</LinearLayout>