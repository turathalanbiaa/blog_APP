        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="5dp"
            android:layoutDirection="ltr"
            >

            <TextView
                android:id="@+id/viewsCount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="5dp"
                android:text="views"
                android:drawablePadding="5dp"
               android:drawableLeft="@drawable/ic_remove_red_eye_black_24dp"
                android:layout_weight="0"
                android:textDirection="ltr"/>

            <View
                android:id="@+id/divider4"
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:layout_margin="5dp"
                android:background="?android:attr/listDivider" />

            <TextView
                android:id="@+id/commentsCount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:paddingLeft="10dp"
                android:drawablePadding="5dp"
                android:drawableLeft="@drawable/ic_comment_black_24dp"
                android:textDirection="ltr"/>

            <Button
                android:id="@+id/catBtn"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:background="@drawable/bg_button_tag"
                android:text="@string/menu_categories"
                android:textSize="14sp"
                android:paddingRight="10dp"
                android:paddingLeft="10dp"
                android:textStyle="normal"
                android:layout_marginRight="5dp"
                android:layout_weight="0"
                />



        </LinearLayout>




